<!-- #########################my collection display (list view)########################## -->
<div class="container">

<table class="table">
  <tr>
        <th></th>
        <th>Name</th>
        <th>Artist</th>
        <th>Album</th>
        <th>Artistid</th>
        <th>Albumid</th>
        <th>Songid</th>
        <th>My Rating</th>
        <th colspan="4"></th>
     </tr>
     <hr>
 
<%@songs.each do |mysong| %>
<tr>
<td><div id="listimage"><%=image_tag mysong.artwork%></div></td>
<td><%=mysong.name%></td>
<td><%=mysong.artist%></td>
<td><%=mysong.songalbum%></td>
<td><%=mysong.artistid%></td>
<td><%=mysong.albumid%></td>
<td><%=mysong.songid%></td>
<td><%=rating_for mysong, "rating", :enable_half => true, :disable_after_rate => false%></td>
</tr> 


      <% end %>
      </table>
      <hr>
    </div>


 




